<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/ll_border">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EEEED1"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/tv_name"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8B8B7A"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="12sp"

            android:textColor="#000"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/tv_num"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="12sp"

            android:textColor="#000"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/tv_site"/>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/tv_startTime"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/tv_stopTime"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_angle_seat_blue"
            android:text="还书"
            android:id="@+id/btn_return"
            android:layout_marginRight="20dp"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_angle_lecture_yellow"
            android:text="借书码"
            android:layout_marginRight="5dp"
            android:id="@+id/btn_code"
            android:textColor="#000"/>

    </LinearLayout>


</LinearLayout>